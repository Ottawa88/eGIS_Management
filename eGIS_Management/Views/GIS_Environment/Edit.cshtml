@model eGIS_Management.Models.GIS_Environment

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "GIS_Environment", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>GIS_Environment</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Environment_ID)

    @Html.Partial("EnvPartialView")
    @if (Model.Diagram_Name!=null)
    {
        <div class="form-group">
            <span class="control-label col-md-2"><strong>Current Diagram Preview</strong></span>
            <div class="col-md-10">
                <img src="@Url.Content("~/Data_Content/"+Model.Diagram_Name)" alt="Diagram" style="width:300px;height:400px;" />
            </div>
        </div>
    }
        <div class="form-group">
            @Html.Label("Diagram", new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                <input type="file" name="diagram" id="diagram"  accept = "image/*"  />
            </div>
        </div>

    

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
