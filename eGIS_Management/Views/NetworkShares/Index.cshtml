@model IEnumerable<eGIS_Management.Models.NetworkShare>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Network Shares</h2>

<p>
    @if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Admin") | User.IsInRole("Editor"))
        {
            @Html.ActionLink("Create New", "Create")
        }
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.Raw("Share Name")
        </th>
        <th>
            @Html.Raw("Network Path")
        </th>
        <th>
            @Html.Raw("Server Name")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ShareName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Network_Path)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GIS_Server.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>

        <td>

            @if (User.Identity.IsAuthenticated)
            {
                if (User.IsInRole("Admin") | User.IsInRole("Editor"))
                {
                    @Html.ActionLink("Edit | ", "Edit", new { id = item.ID }) 

                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                }
            }

        </td>
    </tr>
}

</table>
