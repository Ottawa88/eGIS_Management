<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - eGIS Management Site</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .setWidth {
            max-width: 200px;
        }

        .concat div {
            overflow: hidden;
            -ms-text-overflow: ellipsis;
            -o-text-overflow: ellipsis;
            text-overflow: ellipsis;
            white-space: nowrap;
            width: inherit;
        }
        .dl-horizontal dt {
            width: 260px;
        }

        .dl-horizontal dd {
            margin-left: 280px;
        }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top"  >
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">


                    <li>@Html.ActionLink( "GIS Environment", "Index", "GIS_Environment")</li>
                    <li>@Html.ActionLink("Server", "Index", "Server")</li>
                    <li>@Html.ActionLink("Applications", "Index", "Applications")</li>
                    <li>@Html.ActionLink("Network Shares", "Index", "NetworkShares")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin") | User.IsInRole("Editor"))
                        {

                            <li>@Html.ActionLink("Software", "Index", "Software")</li>
                            <li>@Html.ActionLink("Tech Support", "Index", "Tech_Support")</li>
                            <li>@Html.ActionLink("Client Contact", "Index", "Client_Contact")</li>
                        }
                    }
                    <!-- <li>@Html.ActionLink("About", "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>-->
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <!--    <footer>
                  <p>&copy; @DateTime.Now.Year - FGP Catalog Application</p>
              </footer>
        -->
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
