<div class="form-group">
    <h3>
        Software Installed on the Server
    </h3>
    <div class="col-md-offset-2 col-md-10">
        <table>
            <tr>
                @{
                    int cnt = 0;
                    List<eGIS_Management.Models.ViewModels.ServerInstalledSoftwareData> installedSoftwares = ViewBag.Softwares;

                    foreach (var item in installedSoftwares)
                    {
                        if (cnt++ % 3 == 0)
                        {
                        @:</tr><tr>
                        }
                        @:<td>
                            <input type="checkbox"
                                   name="installedSoftware"
                                   value="@item.Software_ID"
                                   @(Html.Raw(item.Installed ? "checked=\"checked\"" : "")) />
                            @item.Name_Version @:&nbsp;&nbsp;
                        @:</td>
                    }
                @:</tr>
                }
            </table>
        </div>
    </div>

